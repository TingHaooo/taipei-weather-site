{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "noImplicitAny": false,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
